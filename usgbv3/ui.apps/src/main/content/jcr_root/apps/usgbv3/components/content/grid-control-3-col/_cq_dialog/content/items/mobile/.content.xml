<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Mobile"
    sling:resourceType="granite/ui/components/foundation/section">
    <layout
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <column1width
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/select"
                    fieldLabel="Column 1 Width"
                    name="./mcolumn1width">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="usgbv3/components/structure/common/datasources/colwidth"/>
                </column1width>
                <c1hidepadding
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                    name="./mc1hidepadding"
                    text="Hide Column 1 Padding"
                    value="true"/>
                <column2width
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/select"
                    fieldLabel="Column 2 Width"
                    name="./mcolumn2width">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="usgbv3/components/structure/common/datasources/colwidth"/>
                </column2width>
                <c2hidepadding
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                    name="./mc2hidepadding"
                    text="Hide Column 2 Padding"
                    value="true"/>
                <column3width
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/select"
                    fieldLabel="Column 3 Width"
                    name="./mcolumn3width">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="usgbv3/components/structure/common/datasources/colwidth"/>
                </column3width>
                <c3hidepadding
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                    name="./mc3hidepadding"
                    text="Hide Column 3 Padding"
                    value="true"/>
                <offset
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/select"
                    fieldLabel="Offset"
                    name="./moffset">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="usgbv3/components/structure/common/datasources/offset"/>
                </offset>
                <margintop
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/select"
                    fieldLabel="Margin (Top)"
                    name="./mmargintop">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="usgbv3/components/structure/common/datasources/margin"/>
                </margintop>
                <marginbottom
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/select"
                    fieldLabel="Margin (Bottom)"
                    name="./mmarginbottom">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="usgbv3/components/structure/common/datasources/margin"/>
                </marginbottom>
            </items>
        </column>
    </items>
</jcr:root>
