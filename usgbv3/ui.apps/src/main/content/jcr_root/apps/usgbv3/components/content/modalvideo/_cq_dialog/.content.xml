<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Modal Video"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="http://www.adobe.com/go/aem6_1_docs_component_en#List - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basic
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <tilesize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                defaultValue="big-size"
                                fieldLabel="Tile Size"
                                name="./tilesize">
                                <items jcr:primaryType="nt:unstructured">
                                    <big
                                        jcr:primaryType="nt:unstructured"
                                        text="Big"
                                        value="big-size"/>
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="Small"
                                        value="small-size"/>
                                </items>
                            </tilesize>
                            <titlefont-color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="usgb/widgets/colorpicker"
                                classicPaletteType="{Boolean}false"
                                fieldLabel="Title Color"
                                freestylePaletteType="{Boolean}true"
                                name="./fontColortitle">
                                <mappings jcr:primaryType="nt:unstructured">
                                    <color-primary-green
                                        jcr:primaryType="nt:unstructured"
                                        name="color-primary-green"
                                        value="#009b3a"/>
                                    <color-primary-yellow
                                        jcr:primaryType="nt:unstructured"
                                        name="color-primary-yellow"
                                        value="#fed100"/>
                                    <color-secondary-red
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-red"
                                        value="#c20051"/>
                                    <color-secondary-blue
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-blue"
                                        value="#00a5dd"/>
                                    <color-secondary-brown
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-brown"
                                        value="#845023"/>
                                    <color-secondary-purple
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-purple"
                                        value="#292182"/>
                                    <color-secondary-orange
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-orange"
                                        value="#e85314"/>
                                    <color-secondary-gold
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-gold"
                                        value="#70772a"/>
                                    <color-secondary-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-grey"
                                        value="#4c4d4f"/>
                                    <color-secondary-teal
                                        jcr:primaryType="nt:unstructured"
                                        name="color-secondary-teal"
                                        value="#006870"/>
                                    <color-white
                                        jcr:primaryType="nt:unstructured"
                                        name="color-white"
                                        value="#FFFFFF"/>
                                    <color-light-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-light-grey"
                                        value="#CCCCCC"/>
                                    <color-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-grey"
                                        value="#999999"/>
                                    <color-dark-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-dark-grey"
                                        value="#666666"/>
                                    <color-deep-dark-grey
                                        jcr:primaryType="nt:unstructured"
                                        name="color-deep-dark-grey"
                                        value="#333333"/>
                                    <color-black
                                        jcr:primaryType="nt:unstructured"
                                        name="color-black"
                                        value="#000000"/>
                                </mappings>
                            </titlefont-color>
                            <hovertileimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Hover Tile Image"
                                name="./hoverimage"/>
                            <videotype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".text-image-hide-show"
                                fieldLabel="Video Type"
                                name="./videoType">
                                <items jcr:primaryType="nt:unstructured">
                                    <html5
                                        jcr:primaryType="nt:unstructured"
                                        text="Internal"
                                        value="internal"/>
                                    <youtube
                                        jcr:primaryType="nt:unstructured"
                                        text="Youtube"
                                        value="external"/>
                                </items>
                            </videotype>
                            <internalvideo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide text-image-hide-show"
                                showhidetargetvalue="internal">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--4"
                                        level="{Long}4"
                                        text="Internal"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <videopath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Video Path"
                                                name="./videopath"
                                                showhidetargetvalue="internal"/>
                                        </items>
                                    </well>
                                </items>
                            </internalvideo>
                            <externalvideo
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide text-image-hide-show"
                                showhidetargetvalue="external">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--4"
                                        level="{Long}4"
                                        text="External"/>
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <videourl/>
                                        </items>
                                    </well>
                                </items>
                            </externalvideo>
                            <videotitle/>
                        </items>
                    </column>
                </items>
            </basic>
        </items>
    </content>
</jcr:root>
